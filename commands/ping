const { SlashCommandBuilder } = require('discord.js');

module.exports = {
  data: new SlashCommandBuilder().setName('ping').setDescription("Répond avec 'pong' et le ping du bot."),
  async execute(interaction) {
    const sent = await interaction.reply({ content: 'Pong ?', fetchReply: true });
    interaction.editReply(`🏓 Latence bot : \`${sent.createdTimestamp - interaction.createdTimestamp}ms\`\nAPI: \`${Math.round(interaction.client.ws.ping)}ms\``);
  }
};
