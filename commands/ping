const { SlashCommandBuilder } = require('discord.js');

module.exports = {
  data: new SlashCommandBuilder()
    .setName('ping')
    .setDescription("Répond avec 'pong' et le ping du bot."),
  async execute(interaction) {
    try {
      const sent = await interaction.reply({ content: 'Pong ?', fetchReply: true });
      await interaction.editReply(`🏓 Latence bot : \`${sent.createdTimestamp - interaction.createdTimestamp}ms\`\nAPI: \`${Math.round(interaction.client.ws.ping)}ms\``);
    } catch (error) {
      console.error("❌ Erreur dans /ping :", error);
      if (!interaction.replied) {
        await interaction.reply({ content: "❌ Erreur lors de l'exécution de la commande.", ephemeral: true });
      }
    }
  },
};
