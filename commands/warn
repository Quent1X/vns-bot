const { SlashCommandBuilder } = require('discord.js');
const warns = new Map(); // Ã  persister avec JSON ou DB si besoin

module.exports = {
  data: new SlashCommandBuilder()
    .setName('warn')
    .setDescription('Ajoute un avertissement Ã  un utilisateur.')
    .addUserOption(opt => opt.setName('utilisateur').setDescription('Membre Ã  avertir').setRequired(true))
    .addStringOption(opt => opt.setName('raison').setDescription('Raison').setRequired(true)),

  async execute(interaction) {
    const user = interaction.options.getUser('utilisateur');
    const reason = interaction.options.getString('raison');
    const logChannel = interaction.guild.channels.cache.get('1365022194438115458');

    if (!warns.has(user.id)) warns.set(user.id, []);
    warns.get(user.id).push({ mod: interaction.user.tag, reason, date: new Date().toLocaleString() });

    await interaction.reply(`âš ï¸ Avertissement ajoutÃ© Ã  ${user.tag}.\nRaison : ${reason}`);
    if (logChannel) {
      logChannel.send(`ğŸ“‹ **Avertissement** pour ${user.tag} par ${interaction.user.tag} : ${reason}`);
    }
  }
};
