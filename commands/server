const { SlashCommandBuilder, EmbedBuilder } = require('discord.js');

module.exports = {
  data: new SlashCommandBuilder().setName('server').setDescription("Affiche les infos du serveur."),
  async execute(interaction) {
    const guild = interaction.guild;
    const embed = new EmbedBuilder()
      .setTitle(`ğŸ“Š Infos du serveur ${guild.name}`)
      .addFields(
        { name: 'ğŸ‘‘ PropriÃ©taire', value: `<@${guild.ownerId}>`, inline: true },
        { name: 'ğŸ‘¥ Membres', value: `${guild.memberCount}`, inline: true },
        { name: 'ğŸ“… CrÃ©Ã© le', value: `<t:${Math.floor(guild.createdTimestamp / 1000)}:D>`, inline: false }
      )
      .setColor(0x00AEEF);

    await interaction.reply({ embeds: [embed] });
  }
};
